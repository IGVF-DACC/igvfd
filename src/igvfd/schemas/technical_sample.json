{
    "title": "Technical Sample",
    "$id": "/profiles/technical_sample.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Schema for submitting a specific technical sample.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "source",
        "sample_material",
        "technical_sample_term"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "sample.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/product_info"
        },
        {
            "$ref": "mixins.json#/url"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "sample.json#/dependentSchemas"
        ]
    },
    "properties": {
        "schema_version": {
            "default": "4"
        },
        "sample_material": {
            "title": "Sample Material",
            "type": "string",
            "default": "undefined",
            "enum": [
                "undefined",
                "inorganic",
                "synthetic",
                "organic"
            ]
        },
        "technical_sample_term": {
            "title": "Technical Sample Term",
            "description": "Ontology of the technical sample.",
            "type": "string",
            "linkTo": "SampleTerm"
        }
    },
    "columns": {
        "uuid": {
            "title": "UUID"
        },
        "accession": {
            "title": "Accession"
        },
        "technical_sample_term": {
            "title": "Technical Sample Term"
        },
        "date_obtained": {
            "title": "Date Obtained"
        },
        "award": {
            "title": "Award"
        },
        "lab": {
            "title": "Lab"
        },
        "status": {
            "title": "Status"
        },
        "submitted_by": {
            "title": "Submitted By"
        },
        "description": {
            "title": "Description"
        }
    },
    "boost_values": {
        "accession": 1.0,
        "@type": 1.0
    },
    "changelog": "/profiles/changelogs/technical_sample.md"
}
