{
    "title": "Sample Term",
    "description": "Schema for a sample ontology term.",
    "$id": "/profiles/sample_term.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "term_id",
        "term_name"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases",
        "deprecated_ntr_term",
        "name"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "ontology_term.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "2"
        },
        "term_id": {
            "@type": "@id",
            "title": "Term ID",
            "description": "An ontology identifier describing a biological sample",
            "permission": "import_items",
            "type": "string",
            "pattern": "^(UBERON|EFO|CL|CLO|NTR):[0-9]{2,8}$"
        },
        "dbxref": {
            "@type": "@id",
            "title": "External Resources",
            "description": "Sample identifiers from external resources, such as Cellosaurus.",
            "permission": "import_items",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "External Identifier",
                "description": "An identifier from external resource.",
                "type": "string",
                "pattern": "^((Cellosaurus:CVCL_\\w{4})|(DepMap:ACH-[0-9]{6}))$"
            }
        }
    },
    "columns": {
        "uuid": {
            "title": "UUID"
        },
        "term_id": {
            "title": "Term ID"
        },
        "term_name": {
            "title": "Term Name"
        },
        "synonym": {
            "title": "Synonym"
        },
        "status": {
            "title": "Status"
        },
        "submitted_by": {
            "title": "Submitted By"
        }
    },
    "boost_values": {
        "@type": 1.0,
        "term_id": 1.0,
        "term_name": 1.0,
        "synonym": 1.0
    },
    "changelog": "/profiles/changelogs/sample_term.md"
}
