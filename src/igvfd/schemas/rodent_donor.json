{
    "title": "Rodent Donor",
    "$id": "/profiles/rodent_donor.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Derived schema for submitting rodent donors.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "taxa",
        "sex",
        "strain"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "donor.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/product_info"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/references"
        },
        {
            "$ref": "mixins.json#/taxa"
        }
    ],
    "dependentSchemas": {
        "lot_id": {
            "required": [
                "product_id"
            ],
            "comment": "Donor with lot_id must include product_id."
        },
        "rodent_identifier": {
            "comment": "The donor must be an individual rodent to specify a rodent identifier.",
            "required": [
                "individual_rodent"
            ],
            "properties": {
                "individual_rodent": {
                    "const": true
                }
            }
        },
        "individual_rodent": {
            "comment": "A rodent identifier is required if the donor is an individual rodent.",
            "if": {
                "properties": {
                    "individual_rodent": {
                        "const": true
                    }
                }
            },
            "then": {
                "required": [
                    "rodent_identifier"
                ]
            },
            "else": {
                "not": {
                    "required": [
                        "rodent_identifier"
                    ]
                }
            }
        }
    },
    "properties": {
        "schema_version": {
            "default": "7"
        },
        "strain_background": {
            "title": "Strain Background",
            "description": "The specific parent strain designation of a non-human donor.",
            "comment": "Strain background of rodent strains.  See Ali Mortazavi grant.",
            "type": "string",
            "enum": [
                "A/J (AJ)",
                "C57BL/6J (B6)",
                "129S1/SvImJ (129)",
                "NOD/ShiLtJ (NOD)",
                "NZO/H1LtJ (NZO)",
                "CAST/EiJ (CAST)",
                "PWK/PhJ (PWK)",
                "WSB/EiJ (WSB)",
                "CAST (M. m. castaneus)",
                "WSB (M. m. domesticus)",
                "PWK (M. m. musculus)"
            ]
        },
        "strain": {
            "title": "Strain Name",
            "description": "The specific strain designation of a non-human donor.",
            "comment": "Strain name of rodent strains.",
            "type": "string"
        },
        "genotype": {
            "title": "Strain Genotype",
            "description": "The genotype of the strain according to accepted nomenclature conventions.",
            "comment": "Genotype of rodent strains.",
            "type": "string"
        },
        "taxa": {
            "enum": [
                "Mus musculus"
            ]
        },
        "individual_rodent": {
            "title": "Individual Rodent",
            "description": "This rodent donor represents an individual rodent.",
            "type": "boolean",
            "default": false
        },
        "rodent_identifier": {
            "title": "Rodent Identifier",
            "description": "The identifier for this individual rodent donor.",
            "comment": "`individual_rodent` should be submitted as true with submission of this property.",
            "type": "string"
        },
        "dbxrefs": {
            "items": {
                "title": "External identifier",
                "description": "Identifier from an external resource that may have 1-to-1 or 1-to-many relationships with IGVF donors.",
                "type": "string",
                "pattern": "^(GEO:SAMN\\d+)|(IMSR_JAX:\\d{6})$"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "dbxrefs",
        "taxa",
        "strain"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/rodent_donor.md"
}
