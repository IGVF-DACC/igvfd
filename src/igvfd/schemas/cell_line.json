{
    "title": "Cell line",
    "$id": "/profiles/cell_line.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Schema for submitting a cell line sample.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "source"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "sample.json#/properties"
        },
        {
            "$ref": "biosample.json#/properties"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/alternate_accessions"
        },
        {
            "$ref": "mixins.json#/accessioned_status"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/submitter_comment"
        },
        {
            "$ref": "mixins.json#/notes"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/product_info"
        },
        {
            "$ref": "mixins.json#/url"
        }
    ],
    "dependentSchemas": {
        "lot_id": {
            "required": [
                "product_id"
            ],
            "comment": "Sample with lot_id must include product_id."
        },
        "age_units": {
            "comment": "Human biosamples cannot have age units of minutes or hours. Yeast biosamples cannot have age units of years or months.",
            "allOf": [
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "enum": [
                                    "Homo sapiens"
                                ]
                            },
                            "age_units": {
                                "enum": [
                                    "minute",
                                    "hour"
                                ]
                            }
                        }
                    }
                },
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "enum": [
                                    "Saccharomyces"
                                ]
                            },
                            "age_units": {
                                "enum": [
                                    "year",
                                    "month"
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "life_stage": {
            "comment": "Human and mouse biosamples cannot have yeast life stages and vice versa.",
            "allOf": [
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "oneOf": [
                                    {
                                        "enum": [
                                            "Homo sapiens",
                                            "Mus musculus"
                                        ]
                                    }
                                ]
                            },
                            "life_stage": {
                                "enum": [
                                    "lag",
                                    "fermentative",
                                    "respirative",
                                    "stationary",
                                    "decline"
                                ]
                            }
                        }
                    }
                },
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "enum": [
                                    "Saccharomyces"
                                ]
                            },
                            "life_stage": {
                                "enum": [
                                    "adult",
                                    "child",
                                    "postnatal",
                                    "embryonic"
                                ]
                            }
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "passage_number": {
            "title": "Passage number",
            "description": "Number of passages including the passages from the source.",
            "comment": "In calculating passage number, include passages from the source.",
            "type": "integer",
            "minimum": 0
        },
        "date_obtained": {
            "title": "Date harvested"
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/cell_line.md"
}
