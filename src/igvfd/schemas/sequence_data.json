{
    "title": "Sequence data",
    "$id": "/profiles/sequence_data.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "required": [
        "award",
        "lab"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases",
        "md5sum"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "file.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "file.json#/dependentSchemas"
        ]
    },
    "type": "object",
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "content_type": {
            "enum": [
                "genome reference",
                "guide RNA sequences",
                "reads",
                "sequence barcodes",
                "spike-ins",
                "subreads",
                "transcriptome reference",
                "vector sequences"
            ]
        },
        "file_format": {
            "enum": [
                "bam",
                "fasta",
                "fastq",
                "gtf",
                "tar",
                "txt"
            ]
        }
    },
    "changelog": "/profiles/changelogs/sequence_data.md"
}
