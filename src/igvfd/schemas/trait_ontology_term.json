{
    "title": "Trait ontology term",
    "description": "Schema for an ontology term.",
    "$id": "/profiles/trait_ontology_term.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "term_id",
        "term_name"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/standard_status"
        },
        {
            "$ref": "mixins.json#/notes"
        },
        {
            "$ref": "ontology_term.json#/properties"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "term_id": {
            "@type": "@id",
            "title": "Ontology ID",
            "description": "An ontology identifier describing an assay.",
            "permission": "import_items",
            "type": "string",
            "pattern": "^(OBA|MONDO|HP|EFO|NTR):[0-9]{2,8}$"
        }
    },
    "changelog": "/profiles/changelogs/trait_ontology_term.md"
}
