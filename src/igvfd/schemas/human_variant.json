{
    "title": "Human Variant",
    "description": "Schema for submitting a human variant.",
    "$id": "/profiles/human_variant.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "ref",
        "alt",
        "rsid"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "variant.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "rsid": {
            "title": "Variant ID",
            "description": "An external ID for the variant like dbSNP.",
            "comment": "This is currently only accepting rsIDs",
            "type": "string",
            "pattern": "rs[0-9]+"
        },
        "assembly": {
            "enum": [
                "GRCh38"
            ]
        },
        "chromosome": {
            "title": "Chromosome",
            "description": "The number (or letter) designation for the chromosome, e.g. chr1 or chrX.",
            "type": "string",
            "pattern": "^((chr[0-9A-Za-z]+)|(MT))$"
        },
        "refseq_sequence": {
            "title": "RefSeq Sequence",
            "description": "The RefSeq identifier for this variant.",
            "type": "string",
            "pattern": "^((NC_|NT_|NW_)[0-9]+.[0-9]{1,2})$"
        }
    },
    "changelog": "/profiles/changelogs/human_variant.md"
}
