{
    "title": "Donor",
    "$id": "/profiles/donor.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Abstract schema for donors.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "organism",
        "sex"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/references"
        },
        {
            "$ref": "mixins.json#/organism"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "DO"
        },
        "sex": {
            "title": "Sex",
            "description": "Sex of the donor.",
            "type": "string",
            "default": "unspecified",
            "enum": [
                "male",
                "female",
                "unspecified"
            ]
        },
        "parents": {
            "title": "Parents",
            "description": "Biological parents of this donor",
            "comment": "A list of parents as it applies to the experiment.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Parent",
                "description": "Biological parent of this donor.",
                "type": "string",
                "linkTo": "Donor"
            },
            "maxItems": 2
        },
        "external_resources": {
            "title": "External Resources",
            "description": "A list of external resources associated with the donor.",
            "type": "array",
            "default": [],
            "uniqueItems": false,
            "items": {
                "title": "External Resource",
                "description": "An external resource associated with the donor.",
                "type": "object",
                "required": [
                    "resource_identifier",
                    "resource_name"
                ],
                "additionalProperties": false,
                "properties": {
                    "resource_name": {
                        "title": "External Resource Name",
                        "description": "Name of external resource.",
                        "type": "string"
                    },
                    "resource_identifier": {
                        "title": "External Resource Identifier",
                        "description": "Identifier of external resource.",
                        "type": "string"
                    },
                    "resource_url": {
                        "title": "External Resource URL",
                        "description": "URL for the external resource",
                        "type": "string"
                    }
                }
            }
        }
    }
}
