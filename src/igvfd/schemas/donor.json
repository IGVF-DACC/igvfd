{
    "title": "Donor",
    "$id": "/profiles/donor.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Abstract schema for donors.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "taxa",
        "sex"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/references"
        },
        {
            "$ref": "mixins.json#/taxa"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "3"
        },
        "accession": {
            "accessionType": "DO"
        },
        "sex": {
            "title": "Sex",
            "description": "Sex of the donor.",
            "type": "string",
            "default": "unspecified",
            "enum": [
                "male",
                "female",
                "unspecified"
            ]
        },
        "parents": {
            "title": "Parents",
            "description": "Biological parents of this donor",
            "comment": "A list of parents as it applies to the experiment.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "Parent",
                "description": "Biological parent of this donor.",
                "type": "string",
                "linkTo": "Donor"
            },
            "maxItems": 2
        },
        "traits": {
            "title": "Phenotypic Traits",
            "description": "A list of known phenotypic traits of the donor",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "title": "Phenotype Term",
                "description": "Phenotypic trait",
                "comment": "See phenotype_term.json for available identifiers.",
                "type": "string",
                "linkTo": "PhenotypeTerm"
            }
        },
        "phenotypic_features": {
            "title": "Phenotypic Features",
            "description": "A list of associated phenotypic features of the donor",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "title": "Phenotypic Feature",
                "description": "Phenotypic feature",
                "comment": "See phenotypic_feature.json for available identifiers.",
                "type": "string",
                "linkTo": "PhenotypicFeature"
            }
        },
        "external_resources": {
            "title": "External Resources",
            "comment": "External identifier that uniquely identify the donor of the sample, e.g. for strains it might be a strain identifier at a repository or a de-identified donor ID for a person.",
            "description": "A list of external resources associated with the donor.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": false,
            "items": {
                "title": "External Resource",
                "description": "An external resource associated with the donor.",
                "type": "object",
                "required": [
                    "donor_identifier"
                ],
                "additionalProperties": false,
                "properties": {
                    "resource_name": {
                        "title": "External Resource Name",
                        "description": "Name of external source, such as the lab or company.",
                        "type": "string",
                        "linkTo": "Source"
                    },
                    "donor_identifier": {
                        "title": "External Donor Identifier",
                        "description": "External identifier that uniquely identify the donor of the sample.",
                        "type": "string"
                    },
                    "resource_url": {
                        "title": "External Resource URL",
                        "description": "URL for the external resource",
                        "type": "string"
                    }
                }
            }
        }
    }
}
