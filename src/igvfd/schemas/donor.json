{
    "title": "Donor",
    "$id": "/profiles/donor.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Abstract schema for donors.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "taxa",
        "sex"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/references"
        },
        {
            "$ref": "mixins.json#/taxa"
        }
    ],
    "properties": {
        "schema_version": {
            "hidden comment": "Bump the default in the subclasses."
        },
        "accession": {
            "accessionType": "DO"
        },
        "sex": {
            "title": "Sex",
            "description": "Sex of the donor.",
            "type": "string",
            "default": "unspecified",
            "enum": [
                "male",
                "female",
                "unspecified"
            ]
        },
        "parents": {
            "title": "Parents",
            "description": "Biological parents of this donor",
            "comment": "A list of parents as it applies to the experiment.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "Parent",
                "description": "Biological parent of this donor.",
                "type": "string",
                "linkTo": "Donor"
            },
            "maxItems": 2
        },
        "phenotypic_features": {
            "title": "Phenotypic Features",
            "description": "A list of associated phenotypic features of the donor",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "title": "Phenotypic Feature",
                "description": "Phenotypic feature",
                "comment": "See phenotypic_feature.json for available identifiers.",
                "type": "string",
                "linkTo": "PhenotypicFeature"
            }
        }
    }
}
