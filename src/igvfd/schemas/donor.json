{
    "title": "Donor",
    "$id": "/profiles/donor.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Abstract schema for donors.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "taxa",
        "sex"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/references"
        },
        {
            "$ref": "mixins.json#/taxa"
        }
    ],
    "properties": {
        "schema_version": {
            "hidden comment": "Bump the default in the subclasses."
        },
        "accession": {
            "accessionType": "DO"
        },
        "sex": {
            "title": "Sex",
            "description": "Sex of the donor.",
            "type": "string",
            "default": "unspecified",
            "enum": [
                "male",
                "female",
                "unspecified"
            ]
        },
        "related_donors": {
            "title": "Related Donors",
            "description": "Familial relations of this donor",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "donor": {
                        "title": "Related Donor Identifier",
                        "description": "An identifier for the related donor.",
                        "type": "string",
                        "linkTo": "Donor"
                    },
                    "relationship_type": {
                        "title": "Relationship Type",
                        "description": "A descriptive term for the related donorâ€™s relationship to this donor.",
                        "type": "string",
                        "enum": [
                            "parent"
                        ]
                    }
                }
            }
        },
        "phenotypic_features": {
            "title": "Phenotypic Features",
            "description": "A list of associated phenotypic features of the donor",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "title": "Phenotypic Feature",
                "description": "Phenotypic feature",
                "comment": "See phenotypic_feature.json for available identifiers.",
                "type": "string",
                "linkTo": "PhenotypicFeature"
            }
        }
    }
}
