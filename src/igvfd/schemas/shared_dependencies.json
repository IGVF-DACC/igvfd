{
    "title": "Shared dependencies",
    "standard_status": {
        "status": {
            "comment": "Release and archived status should have release_timestamp specified.",
            "oneOf": [
                {
                    "required": [
                        "release_timestamp"
                    ],
                    "properties": {
                        "status": {
                            "enum": [
                                "archived",
                                "released"
                            ]
                        }
                    }
                },
                {
                    "properties": {
                        "status": {
                            "enum": [
                                "deleted",
                                "in progress"
                            ]
                        }
                    }
                }
            ]
        },
        "release_timestamp": {
            "comment": "Release timestamp is required if status is released or archived.",
            "required": [
                "status"
            ],
            "properties": {
                "status": {
                    "enum": [
                        "archived",
                        "released"
                    ]
                }
            }
        }
    },
    "accession_status": {
        "status": {
            "comment": "Release, archived and revoked status should have release_timestamp specified.",
            "oneOf": [
                {
                    "required": [
                        "release_timestamp"
                    ],
                    "properties": {
                        "status": {
                            "enum": [
                                "revoked",
                                "archived",
                                "released"
                            ]
                        }
                    }
                },
                {
                    "properties": {
                        "status": {
                            "enum": [
                                "in progress",
                                "deleted",
                                "replaced"
                            ]
                        }
                    }
                }
            ]
        },
        "release_timestamp": {
            "comment": "Release timestamp is required if status is released, revoked or archived.",
            "required": [
                "status"
            ],
            "properties": {
                "status": {
                    "enum": [
                        "revoked",
                        "archived",
                        "released"
                    ]
                }
            }
        }
    },
    "product_info": {
        "lot_id": {
            "comment": "Specification of lot_id requires product_id.",
            "required": [
                "product_id"
            ]
        },
        "product_id": {
            "comment": "Specification of product_id requires sources.",
            "required": [
                "sources"
            ]
        }
    },
    "external_host": {
        "externally_hosted": {
            "comment": "Only externally hosted files should have an external host url. External host url is required if the file is externally hosted.",
            "oneOf": [
                {
                    "properties": {
                        "externally_hosted": {
                            "const": true
                        }
                    },
                    "required": [
                        "external_host_url"
                    ]
                },
                {
                    "properties": {
                        "externally_hosted": {
                            "const": false
                        }
                    },
                    "not": {
                        "required": [
                            "external_host_url"
                        ]
                    }
                }
            ]
        }
    }
}
