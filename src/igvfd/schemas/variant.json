{
    "title": "Variant",
    "description": "Schema for submitting a variant.",
    "$id": "/profiles/variant.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "ref",
        "alt",
        "position"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "associated_genes": {
            "title": "Associated Genes",
            "type": "array",
            "items": {
                "title": "The genes associated with this variant",
                "linkTo": "Gene",
                "type": "string"
            }
        },
        "ref": {
            "title": "Reference Sequence",
            "description": "The sequence found in this position in the reference.",
            "type": "string",
            "pattern": "^[ATCG]*$"
        },
        "alt": {
            "title": "Variant Sequence",
            "description": "The sequence found in this position in the variant.",
            "type": "string",
            "pattern": "^[ATCG]*$"
        },
        "associated_traits": {
            "title": "Associated Traits",
            "type": "array",
            "items": {
                "title": "The phenotype traits associated with this variant",
                "linkTo": "PhenotypeTerm",
                "type": "string"
            }
        },
        "variation_type": {
            "title": "Variation Type",
            "description": "The type of variant (SNV, duplication, insertion, duplication).",
            "type": "string",
            "enum": [
                "SNV",
                "insertion",
                "deletion",
                "duplication"
            ]
        },
        "assembly": {
            "title": "Mapping Assembly",
            "description": "The genome assembly to which coordinates relate. e.g. GRCh38.",
            "type": "string",
            "enum": [
                "GRCh38",
                "mm10",
                "mm9"
            ]
        },
        "position": {
            "title": "Position",
            "description": "The starting coordinate of the variant.",
            "type": "integer",
            "minimum": 0
        }
    },
    "changelog": "/profiles/changelogs/variant.md"
}
