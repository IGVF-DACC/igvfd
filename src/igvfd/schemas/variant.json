{
    "title": "Variant",
    "description": "Schema for submitting a variant.",
    "$id": "/profiles/variant.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "associated_genes": {
            "title": "Associated Genes",
            "type": "array",
            "items": {
                "title": "The genes associated with this variant.",
                "linkTo": "Gene",
                "type": "string"
            }
        },
        "associated_traits": {
            "title": "Associated Traits",
            "type": "array",
            "items": {
                "title": "The phenotype traits this variant is associated with and selected for.",
                "linkTo": "PhenotypeTerm",
                "type": "string"
            }
        },
        "ref": {
            "title": "Reference Sequence",
            "description": "The sequence found in this position in the reference.",
            "type": "string",
            "pattern": "^[ATCG]*$|^-$"
        },
        "alt": {
            "title": "Variant Sequence",
            "description": "The sequence found in this position in the variant.",
            "type": "string",
            "pattern": "^[ATCG]*$|^-$"
        },
        "assembly": {
            "title": "Mapping Assembly",
            "description": "The genome assembly to which coordinates relate. e.g. GRCh38.",
            "type": "string",
            "enum": [
                "GRCh38",
                "mm10"
            ]
        },
        "position": {
            "title": "Position",
            "description": "The location of the variant. The coordinate should be in VRS format i.e. represented in 1-indexed and inter-residue.",
            "type": "integer",
            "minimum": 0
        }
    },
    "changelog": "/profiles/changelogs/variant.md"
}
