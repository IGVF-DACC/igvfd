{
    "title": "Variant",
    "description": "Abstract schema for variants.",
    "$id": "/profiles/variant.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "selection_criteria": {
            "title": "Variant Selection Criteria Details",
            "type": "array",
            "items": {
                "title": "The reason this variant was selected for study.",
                "type": "string",
                "comment": ""
            }
        },
        "ref": {
            "title": "Reference Sequence",
            "description": "The sequence found in this position in the reference.",
            "type": "string",
            "pattern": "^[ATCG]*$"
        },
        "alt": {
            "title": "Alternative Sequence",
            "description": "The sequence found in this position in the variant.",
            "type": "string",
            "pattern": "^[ATCG]*$|^-$"
        },
        "assembly": {
            "title": "Genome Assembly",
            "description": "The genome assembly to which the variant coordinates relate.",
            "type": "string",
            "enum": [
                "GRCh38",
                "mm10"
            ]
        },
        "position": {
            "title": "Position",
            "description": "The location of the variant. The coordinate should be represented in 1-indexed format.",
            "type": "integer",
            "minimum": 1
        }
    },
    "changelog": "/profiles/changelogs/variant.md"
}
