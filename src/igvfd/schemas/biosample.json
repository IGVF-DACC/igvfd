{
    "title": "Biosample",
    "$id": "/profiles/biosample.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Schema for submitting a specific biological sample.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "source",
        "donors",
        "taxa"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "sample.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/product_info"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/taxa"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "sample.json#/dependentSchemas"
        ],
        "age": {
            "comment": "Biosample with a defined age requires age_units.",
            "allOf": [
                {
                    "if": {
                        "not": {
                            "properties": {
                                "age": {
                                    "const": "unknown"
                                }
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "age_units"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "age_units": {
                                "const": "year"
                            },
                            "taxa": {
                                "const": "Homo sapiens"
                            }
                        },
                        "required": [
                            "age_units",
                            "taxa"
                        ]
                    },
                    "then": {
                        "properties": {
                            "age": {
                                "pattern": "^(([1-8]?\\d)|(90 or above))$"
                            }
                        }
                    }
                }
            ]
        },
        "age_units": {
            "comment": "Human biosamples cannot have age units of minutes or hours. Yeast biosamples cannot have age units of years or months.",
            "required": [
                "age"
            ],
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "taxa": {
                                "const": "Homo sapiens"
                            }
                        },
                        "required": [
                            "taxa"
                        ]
                    },
                    "then": {
                        "properties": {
                            "age_units": {
                                "enum": [
                                    "day",
                                    "week",
                                    "month",
                                    "year"
                                ]
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "taxa": {
                                "const": "Saccharomyces"
                            }
                        },
                        "required": [
                            "taxa"
                        ]
                    },
                    "then": {
                        "properties": {
                            "age_units": {
                                "enum": [
                                    "minute",
                                    "hour",
                                    "day",
                                    "week"
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "life_stage": {
            "comment": "Human and mouse biosamples have different life stages to yeast.",
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "taxa": {
                                "enum": [
                                    "Homo sapiens",
                                    "Mus musculus"
                                ]
                            }
                        },
                        "required": [
                            "taxa"
                        ]
                    },
                    "then": {
                        "properties": {
                            "life_stage": {
                                "enum": [
                                    "adult",
                                    "child",
                                    "postnatal",
                                    "embryonic",
                                    "unknown"
                                ]
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "taxa": {
                                "enum": [
                                    "Saccharomyces"
                                ]
                            }
                        },
                        "required": [
                            "taxa"
                        ]
                    },
                    "then": {
                        "properties": {
                            "life_stage": {
                                "enum": [
                                    "lag",
                                    "fermentative",
                                    "respirative",
                                    "stationary",
                                    "decline",
                                    "unknown"
                                ]
                            }
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "hidden comment": "Bump the default in the subclasses."
        },
        "age": {
            "title": "Age",
            "description": "Age of organism at collection of the biosample.",
            "comment": "Ages over 90 years are generic for privacy purposes.",
            "type": "string",
            "pattern": "^((\\d+(\\.[1-9])?(\\-\\d+(\\.[1-9])?)?)|(unknown)|([1-8]?\\d)|(90 or above))$"
        },
        "age_units": {
            "title": "Age units",
            "description": "The units of time associated with age of the biosample.",
            "type": "string",
            "enum": [
                "minute",
                "hour",
                "day",
                "week",
                "month",
                "year"
            ]
        },
        "life_stage": {
            "title": "Life stage",
            "description": "The development stage of the organism used to prepare biosample.",
            "type": "string",
            "enum": [
                "adult",
                "child",
                "postnatal",
                "embryonic",
                "unknown",
                "lag",
                "fermentative",
                "respirative",
                "stationary",
                "decline"
            ]
        },
        "biosample_term": {
            "title": "Biosample term",
            "description": "Ontology term identifying a biosample.",
            "type": "string",
            "linkTo": "SampleTerm"
        },
        "disease_term": {
            "title": "Disease term",
            "description": "Ontology term of the disease associated with the biosample.",
            "comment": "This property should only be used to submit existing known diseases, and not any phenotypic trait.",
            "type": "string",
            "linkTo": "PhenotypeTerm"
        },
        "nih_institutional_certification": {
            "type": "string",
            "title": "NIH institutional certification",
            "description": "Institutional certification given by the NIH for human biosamples.",
            "comment": "Required for IGVF human biosamples.",
            "pattern": "^NIC[A-Z0-9]+$"
        },
        "pooled_from": {
            "title": "Biosample(s) pooled from",
            "description": "The biosample(s) this biosample is pooled from.",
            "type": "array",
            "uniqueItems": true,
            "minItems": 2,
            "items": {
                "title": "Biosample",
                "description": "Biosample(s).",
                "comment": "See biosample.json for available identifiers.",
                "type": "string",
                "linkTo": "Biosample"
            }
        },
        "part_of": {
            "title": "Part of biosample",
            "description": "Links to a biosample which represents a larger sample from which this sample was taken regardless of whether it is a tissue taken from an organism or smaller slices of a piece of tissue or aliquots of a cell growth.",
            "comment": "For other specific relationships such as differentiation or hosting there are separate properties.",
            "type": "string",
            "linkTo": "Biosample"
        },
        "treatments": {
            "title": "Treatments",
            "description": "A list of treatments applied to the biosample.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "Treatment",
                "comment": "See treatment.json for available identifiers.",
                "type": "string",
                "linkTo": "Treatment"
            }
        },
        "donors": {
            "title": "Donors",
            "description": "Donor(s). Any contributing donor.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "Donor",
                "description": "Donor(s).",
                "comment": "See concrete class human_donor.json or rodent_donor.json for available identifiers.",
                "type": "string",
                "linkTo": "Donor"
            }
        }
    }
}
