{
    "title": "Biosample",
    "$id": "/profiles/biosample.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Schema for submitting a specific biological sample.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "source"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "sample.json#/properties"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/alternate_accessions"
        },
        {
            "$ref": "mixins.json#/accessioned_status"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/submitter_comment"
        },
        {
            "$ref": "mixins.json#/notes"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/product_info"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/collections"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "sample.json#/dependentSchemas"
        ],
        "age_units": {
            "comment": "Human biosamples cannot have age units of minutes or hours. Yeast biosamples cannot have age units of years or months.",
            "allOf": [
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "enum": [
                                    "Homo sapiens"
                                ]
                            },
                            "age_units": {
                                "enum": [
                                    "minute",
                                    "hour"
                                ]
                            }
                        }
                    }
                },
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "enum": [
                                    "Saccharomyces"
                                ]
                            },
                            "age_units": {
                                "enum": [
                                    "year",
                                    "month"
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "life_stage": {
            "comment": "Human and mouse biosamples cannot have yeast life stages and vice versa.",
            "allOf": [
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "oneOf": [
                                    {
                                        "enum": [
                                            "Homo sapiens",
                                            "Mus musculus"
                                        ]
                                    }
                                ]
                            },
                            "life_stage": {
                                "enum": [
                                    "lag",
                                    "fermentative",
                                    "respirative",
                                    "stationary",
                                    "decline"
                                ]
                            }
                        }
                    }
                },
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "enum": [
                                    "Saccharomyces"
                                ]
                            },
                            "life_stage": {
                                "enum": [
                                    "adult",
                                    "child",
                                    "postnatal",
                                    "embryonic"
                                ]
                            }
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "hidden comment": "Bump the default in the subclasses."
        },
        "organism": {
            "enum": [
                "Homo sapiens",
                "Mus musculus",
                "Saccharomyces"
            ]
        },
        "sex": {
            "title": "Sex",
            "description": "Sex of the organism associated with the biosample.",
            "type": "string"
        },
        "age": {
            "title": "Age",
            "description": "Age of organism at collection of the biosample.",
            "type": "number",
            "minimum": 0
        },
        "age_units": {
            "title": "Age units",
            "description": "The units of time associated with age of the biosample.",
            "type": "string",
            "enum": [
                "minute",
                "hour",
                "day",
                "week",
                "month",
                "year"
            ]
        },
        "life_stage": {
            "title": "Life stage",
            "description": "The development stage of the organism used to prepare biosample.",
            "type": "string",
            "enum": [
                "adult",
                "child",
                "postnatal",
                "embryonic",
                "unknown",
                "lag",
                "fermentative",
                "respirative",
                "stationary",
                "decline"
            ]
        },
        "biosample_ontology": {
            "title": "Biosample ontology term",
            "description": "Ontology term of the biosample.",
            "type": "string",
        },
        "disease_ontology": {
            "title": "Disease ontology term",
            "description": "Ontology term of the disease associated with the biosample.",
            "type": "string"
        },
        "nih_institutional_certification": {
            "type": "string",
            "title": "NIH institutional certification",
            "description": "Institutional certification given by the NIH for human biosamples.",
            "comment": "Required for IGVF human biosamples.",
            "pattern": "^NIC[A-Z0-9]+$"
        },
        "date_obtained": {
            "title": "Date obtained",
            "description": "The date the biosample was harvested, disected, created depending on biosample type.",
            "comment": "Date should be submitted in as YYYY-MM-DD.",
            "type": "string",
            "format": "date"
        },
        "related_biosamples": {
            "title": "Related biosamples",
            "description": "Biosamples that are related to this biosample with the relation of 'realted_biosample_realtion'.",
            "comment": "A list of biosamples should all have the same relationship to this biosample.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "description": "A related biosample",
                "comment": "See biosample.json for available identifiers.",
                "type": "string",
                "linkTo": "Biosample"
            }
        },
        "related_biosamples_relation": {
            "title": "Relationship to other related biosamples",
            "description": "The specific relationship to the biosamples in related_biosamples field",
            "comment": "Must be submitted with related_biosamples",
            "enum": [
                "originated_from",
                "pooled_from",
                "separated_from",
                "hosted_by",
                "derived_from"
            ]
        },
        "treatments": {
            "title": "Treatments",
            "description": "A list of treatments applied to the biosample.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Treatment",
                "comment": "See treatment.json for available identifiers.",
                "type": "string",
                "linkTo": "Treatment"
            }
        },
        "donors": {
            "title": "Donors",
            "description": "Donor(s). Any contributing donor.",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Donor",
                "description": "Donor(s).",
                "comment": "See concrete class human_donor.json or rodent_donor.json for available identifiers.",
                "type": "string",
                "linkTo": "Donor"
            }
        }
    }
}
