{
    "title": "Disease ontology term",
    "description": "Schema for a disease ontology term.",
    "$id": "/profiles/disease_ontology_term.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "term_id",
        "term_name"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "ontology_term.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "term_id": {
            "@type": "@id",
            "title": "Ontology ID",
            "description": "An ontology identifier describing an assay.",
            "permission": "import_items",
            "type": "string",
            "pattern": "^(DOID|HP|NTR):[0-9]{2,8}$"
        }
    },
    "changelog": "/profiles/changelogs/disease_ontology_term.md"
}
