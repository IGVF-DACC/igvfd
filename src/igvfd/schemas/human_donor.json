{
    "title": "Human Donor",
    "$id": "/profiles/human_donor.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Derived schema submitting human donors.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "taxa"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "donor.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/references"
        },
        {
            "$ref": "mixins.json#/taxa"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "3"
        },
        "parents": {
            "items": {
                "linkTo": "HumanDonor",
                "type": "string"
            }
        },
        "health_status_history": {
            "title": "Health Status History",
            "description": "Relevent health status changes in the donor",
            "type": "array",
            "minItems": 1,
            "items": {
                "title": "Health Status",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "health_description": {
                        "title": "Description of Donor Health",
                        "description": "Description of the health status change.",
                        "type": "string",
                        "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$",
                        "formInput": "textarea"
                    },
                    "date_start": {
                        "title": "Date Health Change Started",
                        "description": "The date the donor health change started.",
                        "type": "string",
                        "format": "date"
                    },
                    "date_end": {
                        "title": "Date Health Change Ended",
                        "description": "The date the donor health change ended. This value is not set if the health status is continuing, or if there is a following health status.",
                        "type": "string",
                        "format": "date"
                    }
                }
            }
        },
        "ethnicity": {
            "title": "Ethnicity",
            "comment": "We use http://bioportal.bioontology.org/ontologies/HANCESTRO as a template for the enum list of ethnicities.",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "type": "string",
                "enum": [
                    "African American",
                    "Arab",
                    "Asian",
                    "Black",
                    "Black African",
                    "Chinese",
                    "Esan",
                    "Eskimo",
                    "European",
                    "Gambian",
                    "Han Chinese",
                    "Hispanic",
                    "Indian",
                    "Japanese",
                    "Luhya",
                    "Maasai",
                    "Mende",
                    "Native Hawaiian",
                    "Pacific Islander",
                    "Yoruba"
                ]
            }
        },
        "taxa": {
            "enum": [
                "Homo sapiens"
            ]
        },
        "traits": {
            "description": "A list of known phenotypic traits of the Human donor",
            "type": "array"
        }
    },
    "columns": {
        "uuid": {
            "title": "UUID"
        },
        "accession": {
            "title": "Accession"
        },
        "aliases": {
            "title": "Aliases"
        },
        "taxa": {
            "title": "Taxa"
        },
        "sex": {
            "title": "Sex"
        },
        "award": {
            "title": "Award"
        },
        "ethnicity": {
            "title": "Ethnicity"
        },
        "lab": {
            "title": "Lab"
        },
        "status": {
            "title": "Status"
        },
        "submitted_by": {
            "title": "Submitted By"
        }
    },
    "boost_values": {
        "accession": 1.0,
        "@type": 1.0,
        "taxa": 1.0,
        "ethnicity": 1.0
    },
    "changelog": "/profiles/changelogs/human_donor.md"
}
