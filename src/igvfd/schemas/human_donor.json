{
    "title": "Human Donor",
    "$id": "/profiles/human_donor.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Derived schema submitting human donors.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "taxa"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "donor.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/references"
        },
        {
            "$ref": "mixins.json#/taxa"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "7"
        },
        "parents": {
            "items": {
                "linkTo": "HumanDonor",
                "type": "string"
            }
        },
        "ethnicities": {
            "title": "Ethnicity",
            "comment": "We use http://bioportal.bioontology.org/ontologies/HANCESTRO as a template for the enum list of ethnicities.",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "type": "string",
                "enum": [
                    "African American",
                    "African Caribbean",
                    "Arab",
                    "Asian",
                    "Black",
                    "Black African",
                    "Chinese",
                    "Colombian",
                    "Dai Chinese",
                    "Esan",
                    "Eskimo",
                    "European",
                    "Gambian",
                    "Han Chinese",
                    "Hispanic",
                    "Indian",
                    "Japanese",
                    "Kinh Vietnamese",
                    "Luhya",
                    "Maasai",
                    "Mende",
                    "Native Hawaiian",
                    "Pacific Islander",
                    "Puerto Rican",
                    "Yoruba"
                ]
            }
        },
        "taxa": {
            "enum": [
                "Homo sapiens"
            ]
        },
        "related_donors":{
            "title": "Related Donors",
            "description": "Donors that have familial relations to each other.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "donor": {
                        "title": "Related Donor Identifier",
                        "description": "The identifier to who this donor is related to.",
                        "type": "string",
                        "linkTo": "HumanDonor"
                    },
                    "relationship_type": {
                        "title": "Relationship Type",
                        "description": "The type of relationship with this donor.",
                        "type": "string",
                        "enum": [
                            "aunt",
                            "child",
                            "first cousin once removed",
                            "first cousin",
                            "fraternal twin",
                            "grandparent",
                            "half-sibling",
                            "niece",
                            "nephew",
                            "parent",
                            "paternal twin",
                            "sibling",
                            "second cousin"
                        ]
                    }
                }
            }
        }
    },
    "boost_values": {
        "accession": 1.0,
        "@type": 1.0,
        "taxa": 1.0,
        "ethnicities": 1.0
    },
    "changelog": "/profiles/changelogs/human_donor.md"
}
