{
    "title": "Index File",
    "$id": "/profiles/index_file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A binary file which is indexed.",
    "required": [
        "award",
        "lab",
        "md5sum",
        "file_format",
        "file_set",
        "content_type",
        "derived_from"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases",
        "md5sum"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "file.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/transcriptome_annotation"
        },
        {
            "$ref": "mixins.json#/file_format_type"
        },
        {
            "$ref": "mixins.json#/release_timestamp"
        },
        {
            "$ref": "mixins.json#/assembly"
        },
        {
            "$ref": "mixins.json#/cell_type_annotation"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "file.json#/dependentSchemas"
        ],
        "file_format": {
            "allOf": [
                {
                    "$merge": "file.json#/dependentSchemas/file_format"
                },
                {
                    "oneOf": [
                        {
                            "if": {
                                "properties": {
                                    "file_format": {
                                        "const": "bai"
                                    }
                                }
                            },
                            "then": {
                                "derived_from": {
                                    "linkTo": "AlignmentFile"
                                }
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "file_format": {
                                        "const": "tbi"
                                    }
                                }
                            },
                            "then": {
                                "derived_from": {
                                    "linkTo": [
                                        "ReferenceFile",
                                        "TabularFile"
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        }
    },
    "type": "object",
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "content_type": {
            "comment": "Content Type describes the content of the file.",
            "enum": [
                "index"
            ],
            "submissionExample": {
                "appscript": "index",
                "igvf_utils": "index"
            }
        },
        "file_format": {
            "enum": [
                "bai",
                "tbi"
            ],
            "submissionExample": {
                "appscript": "bai",
                "igvf_utils": "bai"
            }
        },
        "dbxrefs": {
            "comment": "This file type currently does not support any external resource submission."
        },
        "derived_from": {
            "maxItems": 1
        }
    },
    "fuzzy_searchable_fields": [
        "assay_titles",
        "cell_type_annotation.term_name",
        "content_type",
        "description",
        "file_set.samples.summary",
        "file_set.summary",
        "submitted_by.title",
        "submitted_file_name",
        "summary"
    ],
    "exact_searchable_fields": [
        "@type",
        "dbxrefs",
        "file_format",
        "file_set.accession"
    ],
    "changelog": "/profiles/changelogs/index_file.md"
}
