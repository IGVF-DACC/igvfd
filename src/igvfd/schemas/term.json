{
    "title": "Term",
    "description": "Schema for a term.",
    "$id": "/profiles/term.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "term_id",
        "term_name"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "hidden comment": "Bump the default in the subclasses."
        },
        "term_id": {
            "@type": "@id",
            "title": "Term ID",
            "description": "A term identifier describing a biological sample, assay, trait, or disease.",
            "permission": "import_items",
            "type": "string",
            "pattern": "^(UBERON|EFO|CL|CLO|NTR|MONDO|OBA|HP|DOID):[0-9]{2,8}$"
        },
        "term_name": {
            "title": "Term name",
            "description": "Term describing a biological sample, assay, trait, or disease.",
            "comment": "The term should match the term identifiers specified in term_id.",
            "permission": "import_items",
            "pattern": "^(?![\\s\"'])[\\S|\\s]*[^\\s\"']$",
            "type": "string"
        }
    },
    "changelog": "/profiles/changelogs/term.md"
}
