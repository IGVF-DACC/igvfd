{
    "title": "Image",
    "description": "An image to be displayed on an IGVF portal page. This is not a data object.",
    "$id": "/profiles/image.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "attachment"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/attachment"
        },
        {
            "$ref": "mixins.json#/standard_status"
        },
        {
            "$ref": "mixins.json#/release_timestamp"
        }
    ],
    "dependentSchemas": {
        "status": {
            "comment": "Release and archived status should have release_timestamp specified.",
            "oneOf": [
                {
                    "required": [
                        "release_timestamp"
                    ],
                    "properties": {
                        "status": {
                            "enum": [
                                "archived",
                                "released"
                            ]
                        }
                    }
                },
                {
                    "properties": {
                        "status": {
                            "enum": [
                                "deleted",
                                "in progress"
                            ]
                        }
                    }
                }
            ]
        },
        "release_timestamp": {
            "comment": "Release timestamp is required if status is released or archived.",
            "required": [
                "status"
            ],
            "properties": {
                "status": {
                    "enum": [
                        "archived",
                        "released"
                    ]
                }
            }
        }
    },
    "properties": {
        "schema_version": {
            "default": "4"
        },
        "status": {
            "default": "released"
        },
        "caption": {
            "title": "Caption",
            "type": "string",
            "submissionExample": {
                "appscript": "This is an image caption.",
                "igvf_utils": "This is an image caption."
            }
        }
    },
    "fuzzy_searchable_fields": [
        "attachment.type",
        "caption"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/image.md"
}
