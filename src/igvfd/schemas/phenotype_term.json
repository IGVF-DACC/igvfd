{
    "title": "Phenotype Term",
    "description": "Schema for a phenotype ontology term.",
    "$id": "/profiles/phenotype_term.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "term_id",
        "term_name"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases",
        "deprecated_ntr_terms",
        "name"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "ontology_term.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "2"
        },
        "term_id": {
            "@type": "@id",
            "title": "Phenotype Term ID",
            "description": "An ontology term identifier describing a phenotype.",
            "permission": "import_items",
            "type": "string",
            "pattern": "^(DOID|EFO|HP|MONDO|OBA|NTR):[0-9]{2,8}|OBA:VT[0-9]{2,8}|NCIT:C[0-9]{2,8}$"
        }
    },
    "fuzzy_searchable_fields": [
        "term_id",
        "term_name",
        "synonyms"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/phenotype_term.md"
}
