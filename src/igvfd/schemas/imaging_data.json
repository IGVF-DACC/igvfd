{
    "title": "Imaging data",
    "$id": "/profiles/imaging_data.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Schema for submission of a file containing imaging data.",
    "required": [
        "award",
        "lab",
        "md5sum",
        "file_format",
        "content_type"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases",
        "md5sum"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "file.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "file.json#/dependentSchemas"
        ]
    },
    "type": "object",
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "content_type": {
            "comment": "Content Type describes the content of the file.",
            "enum": [
                "image"
            ]
        },
        "file_format": {
            "enum": [
                "tif"
            ]
        },
        "platform": {
            "title": "Platform",
            "description": "The microscopy platform used to produce the imaging data.",
            "type": "string"
        },
        "resolution": {
            "title": "Resolution",
            "description": "The resolution of the microscopy platform.",
            "type": "integer",
            "minimum": 0
        },
        "field_number": {
            "title": "Field Number",
            "description": "The field of view of the microscopy platform.",
            "type": "integer",
            "minimum": 0
        },
        "dimensions": {
            "title": "Dimensions",
            "description": "Dimensions of the image file.",
            "type": "object",
            "properties": {
                "width": {
                    "title": "Image Width",
                    "type": "integer",
                    "minimum": 0
                },
                "height": {
                    "title": "Image Height",
                    "type": "integer",
                    "minimum": 0
                }
            }
        }
    },
    "changelog": "/profiles/changelogs/imaging_data.md"
}
