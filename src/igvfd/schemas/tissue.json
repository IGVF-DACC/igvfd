{
    "title": "Tissue",
    "$id": "/profiles/tissue.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A biosample that is directly harvested from a donor, typically a dissection from an organ.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "sources",
        "donors",
        "sample_terms"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "sample.json#/properties"
        },
        {
            "$ref": "biosample.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/product_info"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/taxa"
        },
        {
            "$ref": "mixins.json#/publication_identifiers"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "biosample.json#/dependentSchemas"
        ],
        "pmi": {
            "comment": "Specification of pmi requires pmi_units.",
            "required": [
                "pmi_units"
            ]
        },
        "pmi_units": {
            "comment": "Specification of pmi_units requires pmi.",
            "required": [
                "pmi"
            ]
        }
    },
    "properties": {
        "schema_version": {
            "default": "17"
        },
        "pmi": {
            "title": "Post-mortem Interval",
            "description": "The amount of time elapsed since death.",
            "comment": "Post-mortem interval for tissues should be reported, if known.",
            "type": "integer",
            "minimum": 1,
            "submissionExample": {
                "appscript": 8,
                "igvf_utils": 8
            }
        },
        "pmi_units": {
            "title": "Post-mortem Interval Units",
            "description": "The unit in which the PMI time was reported.",
            "comment": "Post-mortem interval units for tissues should be reported with PMI value, if known.",
            "type": "string",
            "enum": [
                "second",
                "minute",
                "hour",
                "day",
                "week"
            ],
            "submissionExample": {
                "appscript": "minute",
                "igvf_utils": "minute"
            }
        },
        "ccf_id": {
            "title": "Common Coordinate Framework Identifier",
            "description": "HubMap Common Coordinate Framework unique identifier corresponding to the organ, biological structure, and spatial location of the tissue specimen.",
            "comment": "This identifier will be later linked to: https://portal.hubmapconsortium.org/ccf-eui",
            "type": "string",
            "format": "uuid",
            "submissionExample": {
                "appscript": "78d06f07-f1cb-4d21-b578-b01c7388804f",
                "igvf_utils": "78d06f07-f1cb-4d21-b578-b01c7388804f"
            }
        },
        "preservation_method": {
            "title": "Preservation Method",
            "description": "The method by which the tissue was preserved: cryopreservation (slow-freeze) or flash-freezing.",
            "comment": "Indicate the tissue preservation_method if known and may be/become an experimental variable to track.",
            "type": "string",
            "enum": [
                "cryopreservation",
                "flash-freezing"
            ],
            "submissionExample": {
                "appscript": "flash-freezing",
                "igvf_utils": "flash-freezing"
            }
        },
        "date_obtained": {
            "title": "Date Harvested",
            "submissionExample": {
                "appscript": "2021-08-29",
                "igvf_utils": "2021-08-29"
            }
        },
        "part_of": {
            "linkTo": [
                "Tissue",
                "WholeOrganism"
            ],
            "type": "string",
            "submissionExample": {
                "appscript": "TSTSM02881438 or john-doe:whole_organism01",
                "igvf_utils": "TSTSM02881438 or john-doe:whole_organism01"
            }
        },
        "pooled_from": {
            "items": {
                "title": "Tissue Pooled From",
                "linkTo": "Tissue",
                "type": "string"
            },
            "submissionExample": {
                "appscript": "TSTSM02881437 or john-doe:tissue01",
                "igvf_utils": "TSTSM02881437 or john-doe:tissue01"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "taxa"
    ],
    "exact_searchable_fields": [
        "@type",
        "dbxrefs",
        "nih_institutional_certification"
    ],
    "changelog": "/profiles/changelogs/tissue.md"
}
