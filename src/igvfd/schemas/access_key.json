{
    "title": "Access Key",
    "$id": "/profiles/access_key.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "required": [],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        }
    ],
    "type": "object",
    "properties": {
        "schema_version": {
            "default": "2"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "current",
            "enum": [
                "current",
                "deleted"
            ]
        },
        "user": {
            "title": "User",
            "description": "The user that is assigned to this access key.",
            "comment": "Only admins are allowed to set this value.",
            "type": "string",
            "linkTo": "User",
            "permission": "import_items"
        },
        "description": {
            "title": "Description",
            "type": "string",
            "description": "Description of the access key.",
            "default": "",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$"
        },
        "access_key_id": {
            "title": "Access Key ID",
            "description": "An access key.",
            "comment": "Only admins are allowed to set this value.",
            "type": "string",
            "permission": "import_items",
            "uniqueKey": true
        },
        "secret_access_key_hash": {
            "title": "Secret Access Key Hash",
            "description": "A secret access key.",
            "comment": "Only admins are allowed to set this value.",
            "type": "string",
            "permission": "import_items"
        }
    }
}
