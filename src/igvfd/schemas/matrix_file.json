{
    "title": "Matrix File",
    "$id": "/profiles/matrix_file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A file containing quantification data in a multi-dimension format.",
    "required": [
        "award",
        "lab",
        "md5sum",
        "file_format",
        "file_set",
        "content_type",
        "reference_files",
        "dimension1",
        "dimension2"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases",
        "md5sum"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "file.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/processed_files"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "file.json#/dependentSchemas"
        ]
    },
    "type": "object",
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "content_type": {
            "comment": "Content Type describes the content of the file.",
            "enum": [
                "contact matrix",
                "sparse gene count matrix",
                "sparse peak count matrix",
                "sparse transcript count matrix",
                "transcriptome annotations"
            ],
            "submissionExample": {
                "appscript": "contact matrix",
                "igvf_utils": "contact matrix"
            }
        },
        "dimension1": {
            "title": "Dimension 1",
            "description": "First dimension of the matrix.",
            "type": "string",
            "enum": [
                "cell",
                "fragment",
                "gene",
                "time",
                "treatment",
                "variant"
            ],
            "submissionExample": {
                "appscript": "cell",
                "igvf_utils": "cell"
            }
        },
        "dimension2": {
            "title": "Dimension 2",
            "description": "Second dimension of the matrix.",
            "type": "string",
            "enum": [
                "cell",
                "fragment",
                "gene",
                "time",
                "treatment",
                "variant"
            ],
            "submissionExample": {
                "appscript": "gene",
                "igvf_utils": "gene"
            }
        },
        "file_format": {
            "enum": [
                "h5ad",
                "hdf5",
                "mtx"
            ],
            "submissionExample": {
                "appscript": "h5ad",
                "igvf_utils": "h5ad"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "content_type"
    ],
    "exact_searchable_fields": [
        "@type",
        "dbxrefs",
        "file_format"
    ],
    "changelog": "/profiles/changelogs/matrix_file.md"
}
