{
    "title": "Matrix File",
    "$id": "/profiles/matrix_file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A file containing quantification data in a multi-dimension format.",
    "required": [
        "award",
        "lab",
        "md5sum",
        "file_format",
        "file_set",
        "content_type",
        "reference_files",
        "dimension1",
        "dimension2"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases",
        "md5sum"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "file.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/processed_files"
        },
        {
            "$ref": "mixins.json#/release_timestamp"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "file.json#/dependentSchemas"
        ],
        "file_format": {
            "comment": "Matrix files with file format hic should only specify genomic position dimensions.",
            "allOf": [
                {
                    "$merge": "file.json#/dependentSchemas/file_format"
                },
                {
                    "if": {
                        "properties": {
                            "file_format": {
                                "const": "hic"
                            }
                        },
                        "required": [
                            "file_format"
                        ]
                    },
                    "then": {
                        "properties": {
                            "dimension1": {
                                "enum": [
                                    "genomic position"
                                ]
                            },
                            "dimension2": {
                                "enum": [
                                    "genomic position"
                                ]
                            }
                        }
                    }
                }
            ]
        }
    },
    "type": "object",
    "properties": {
        "schema_version": {
            "default": "6"
        },
        "content_type": {
            "comment": "Content Type describes the content of the file.",
            "enum": [
                "contact matrix",
                "filtered feature barcode matrix",
                "raw feature barcode matrix",
                "sparse gene count matrix",
                "sparse peak count matrix",
                "sparse transcript count matrix",
                "transcriptome annotations"
            ],
            "enum_descriptions": {
                "contact matrix": "A matrix used in genomic assays, particularly in chromosome conformation capture techniques like Hi-C, to represent the frequency of physical interactions between different regions of the genome.",
                "sparse gene count matrix": "A matrix where rows represent genes and columns represent samples or cells, containing counts of sequencing reads that map to each gene.",
                "sparse peak count matrix": "A matrix used in assays like ATAC-seq or ChIP-seq, where rows represent genomic regions (peaks) and columns represent samples or cells.",
                "sparse transcript count matrix": "A matrix where rows represent transcripts and columns represent samples or cells, containing counts of sequencing reads that map to each transcript.",
                "transcriptome annotations": "Provide detailed information about the transcripts detected in a genomic assay, including their genomic coordinates, gene names, and other relevant annotations.",
                "raw feature barcode matrix": "A matrix output from Space Ranger, where rows represent features and columns represent barcoded spots or cells. It contains raw counts of sequencing reads before any filtering or normalization.",
                "filtered feature barcode matrix": "A matrix output from Space Ranger, where rows represent features and columns represent barcoded spots or cells. It contains counts of sequencing reads after filtering out low-quality or low-abundance features."
            },
            "submissionExample": {
                "appscript": "contact matrix",
                "igvf_utils": "contact matrix"
            }
        },
        "dimension1": {
            "title": "Dimension 1",
            "description": "First dimension of the matrix.",
            "type": "string",
            "enum": [
                "cell",
                "fragment",
                "gene",
                "time",
                "treatment",
                "variant",
                "genomic position"
            ],
            "submissionExample": {
                "appscript": "cell",
                "igvf_utils": "cell"
            }
        },
        "dimension2": {
            "title": "Dimension 2",
            "description": "Second dimension of the matrix.",
            "type": "string",
            "enum": [
                "cell",
                "fragment",
                "gene",
                "time",
                "treatment",
                "variant",
                "genomic position"
            ],
            "submissionExample": {
                "appscript": "gene",
                "igvf_utils": "gene"
            }
        },
        "file_format": {
            "enum": [
                "h5ad",
                "hdf5",
                "mtx",
                "tar",
                "hic"
            ],
            "submissionExample": {
                "appscript": "h5ad",
                "igvf_utils": "h5ad"
            }
        },
        "dbxrefs": {
            "comment": "This file type currently does not support any external resource submission."
        }
    },
    "fuzzy_searchable_fields": [
        "content_type",
        "description",
        "submitted_by.title",
        "submitted_file_name",
        "summary"
    ],
    "exact_searchable_fields": [
        "@type",
        "dbxrefs",
        "file_format"
    ],
    "changelog": "/profiles/changelogs/matrix_file.md"
}
