{
    "title": "Sample ontology term",
    "description": "Schema for an ontology term.",
    "$id": "/profiles/sample_ontology_term.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "term_id",
        "term_name"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "ontology_term.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "term_id": {
            "@type": "@id",
            "title": "Ontology ID",
            "description": "An ontology identifier describing a biological sample.",
            "permission": "import_items",
            "type": "string",
            "pattern": "^(UBERON|EFO|CL|CLO|NTR):[0-9]{2,8}$"
        },
        "dbxrefs": {
            "@type": "@id",
            "title": "External resources",
            "description": "Sample identifiers from external resources, such as Cellosaurus.",
            "permission": "import_items",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "External identifier",
                "description": "An identifier from external resource.",
                "type": "string",
                "pattern": "^((Cellosaurus:CVCL_\\w{4})|(DepMap:ACH-[0-9]{6}))$"
            }
        }
    },
    "changelog": "/profiles/changelogs/sample_ontology_term.md"
}
