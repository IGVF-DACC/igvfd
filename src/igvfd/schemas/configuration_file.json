{
    "title": "Configuration File",
    "$id": "/profiles/configuration_file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A file containing configuration settings or information defining the structure of other data files' content.",
    "required": [
        "award",
        "lab",
        "md5sum",
        "file_format",
        "file_set",
        "content_type"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases",
        "md5sum"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "file.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/release_timestamp"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "file.json#/dependentSchemas"
        ],
        "content_type": {
            "comment": "Only configuration files with content_type seqspec are allowed to submit seqspec_of.",
            "allOf": [
                {
                    "if": {
                        "not": {
                            "properties": {
                                "content_type": {
                                    "const": "seqspec"
                                }
                            }
                        }
                    },
                    "then": {
                        "not": {
                            "required": [
                                "seqspec_of"
                            ]
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "content_type": {
                                "const": "seqspec"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "file_format": {
                                "enum": [
                                    "yaml"
                                ]
                            }
                        }
                    }
                }
            ]
        }
    },
    "type": "object",
    "properties": {
        "schema_version": {
            "default": "7"
        },
        "content_type": {
            "comment": "Content Type describes the content of the file.",
            "enum": [
                "seqspec",
                "scale factors"
            ],
            "submissionExample": {
                "appscript": "seqspec",
                "igvf_utils": "seqspec"
            }
        },
        "file_format": {
            "enum": [
                "yaml",
                "json"
            ],
            "submissionExample": {
                "appscript": "yaml",
                "igvf_utils": "yaml"
            }
        },
        "dbxrefs": {
            "comment": "This file type currently does not support any external resource submission."
        },
        "seqspec_of": {
            "title": "Seqspec Of",
            "description": "Sequence files this file is a seqspec of.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "Seqspec Of",
                "type": "string",
                "linkTo": "SequenceFile"
            },
            "submissionExample": {
                "appscript": "[\"john-doe:sequence_file01\", \"IGVFFI1234ABCE\"]",
                "igvf_utils": "john-doe:sequence_file01, IGVFFI1234ABCE"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "content_type",
        "description",
        "submitted_by.title",
        "submitted_file_name",
        "summary"
    ],
    "exact_searchable_fields": [
        "@type",
        "dbxrefs",
        "file_format"
    ],
    "changelog": "/profiles/changelogs/configuration_file.md"
}
