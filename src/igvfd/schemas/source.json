{
    "title": "Source",
    "description": "A vendor or a lab that provides samples for study.",
    "$id": "/profiles/source.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "name",
        "title"
    ],
    "identifyingProperties": [
        "uuid",
        "name",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/standard_status"
        },
        {
            "$ref": "mixins.json#/release_timestamp"
        }
    ],
    "dependentSchemas": {
        "release_timestamp": {
            "comment": "Release timestamp is required if status is released or archived",
            "required": [
                "status"
            ],
            "properties": {
                "status": {
                    "enum": [
                        "archived",
                        "released"
                    ]
                }
            }
        }
    },
    "status": {
        "comment": "Release and archived status should have release_timestamp specified.",
        "oneOf": [
            {
                "required": [
                    "release_timestamp"
                ],
                "properties": {
                    "status": {
                        "enum": [
                            "archived",
                            "released"
                        ]
                    }
                }
            },
            {
                "properties": {
                    "status": {
                        "enum": [
                            "deleted",
                            "in progress"
                        ]
                    }
                }
            }
        ]
    },
    "properties": {
        "schema_version": {
            "default": "4"
        },
        "title": {
            "title": "Title",
            "description": "The complete name of the originating lab or vendor.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$",
            "submissionExample": {
                "appscript": "Sigma",
                "igvf_utils": "Sigma"
            }
        },
        "name": {
            "title": "Name",
            "comment": "A short unique name for the source, current convention is lowercase and hyphen-delimited version of title (e.g. john-doe).",
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$",
            "uniqueKey": true,
            "submissionExample": {
                "appscript": "sigma",
                "igvf_utils": "sigma"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "title"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/source.md"
}
