{
    "title": "Source",
    "description": "A vendor or a lab that provides samples for study.",
    "$id": "/profiles/source.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "name",
        "title"
    ],
    "identifyingProperties": [
        "uuid",
        "name",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "2"
        },
        "title": {
            "title": "Title",
            "description": "The complete name of the originating lab or vendor.",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$",
            "submissionExample": {
                "appscript": "Sigma",
                "igvf_utils": "Sigma"
            }
        },
        "name": {
            "title": "Name",
            "comment": "A short unique name for the source, current convention is lowercase and hyphen-delimited version of title (e.g. john-doe).",
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$",
            "uniqueKey": true,
            "submissionExample": {
                "appscript": "sigma",
                "igvf_utils": "sigma"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "title"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/source.md"
}
