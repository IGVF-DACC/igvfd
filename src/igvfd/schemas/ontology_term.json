{
    "title": "Ontology Term",
    "description": "Schema for an ontology term.",
    "$id": "/profiles/ontology_term.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "term_id",
        "term_name"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases",
        "deprecated_ntr_terms",
        "name"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/standard_status"
        },
        {
            "$ref": "mixins.json#/release_timestamp"
        }
    ],
    "dependentSchemas": {
        "release_timestamp": {
            "comment": "Release timestamp is required if status is released or archived.",
            "required": [
                "status"
            ],
            "properties": {
                "status": {
                    "enum": [
                        "archived",
                        "released"
                    ]
                }
            }
        },
        "status": {
            "comment": "Release and archived status should have release_timestamp specified.",
            "oneOf": [
                {
                    "required": [
                        "release_timestamp"
                    ],
                    "properties": {
                        "status": {
                            "enum": [
                                "archived",
                                "released"
                            ]
                        }
                    }
                },
                {
                    "properties": {
                        "status": {
                            "enum": [
                                "deleted",
                                "in progress"
                            ]
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "schema_version": {
            "hidden comment": "Bump the default in the subclasses."
        },
        "term_id": {
            "@type": "@id",
            "title": "Term ID",
            "description": "An ontology identifier describing a biological sample, assay, trait, or disease.",
            "permission": "import_items",
            "type": "string",
            "pattern": "^(UBERON|EFO|CL|CLO|NTR|MONDO|OBA|HP|DOID):[0-9]{2,8}$"
        },
        "term_name": {
            "title": "Term Name",
            "description": "Ontology term describing a biological sample, assay, trait, or disease.",
            "comment": "The term should match the term identifiers specified in term_id.",
            "permission": "import_items",
            "pattern": "^(?![\\s\"'])[\\S|\\s]*[^\\s\"']$",
            "type": "string"
        },
        "deprecated_ntr_terms": {
            "title": "Deprecated NTR terms",
            "description": "A list of deprecated NTR terms previously associated with this ontology term.",
            "permission": "import_items",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "title": "Term ID",
                "description": "NTR term ID",
                "type": "string",
                "pattern": "^NTR:[0-9]{2,8}$"
            }
        },
        "is_a": {
            "title": "Is A",
            "description": "A list of ontology terms which are the nearest ancestor to this ontology term.",
            "permission": "import_items",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "title": "Ontology Term",
                "type": "string",
                "linkTo": "OntologyTerm"
            }
        }
    },
    "changelog": "/profiles/changelogs/ontology_term.md"
}
