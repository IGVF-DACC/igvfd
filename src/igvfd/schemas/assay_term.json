{
    "title": "Assay Term",
    "description": "Schema for an ontology term identifying an assay",
    "$id": "/profiles/assay_term.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "term_id",
        "term_name"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases",
        "deprecated_ntr_terms",
        "name"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "ontology_term.json#/properties"
        },
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/standard_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "2"
        },
        "term_id": {
            "@type": "@id",
            "title": "Term ID",
            "description": "An ontology term identifier describing an assay.",
            "permission": "import_items",
            "type": "string",
            "pattern": "^(OBI|NTR):[0-9]{2,8}$"
        }
    },
    "columns": {
        "term_id": {
            "title": "Term ID"
        },
        "term_name": {
            "title": "Term Name"
        },
        "synonyms": {
            "title": "Synonyms"
        },
        "status": {
            "title": "Status"
        },
        "submitted_by": {
            "title": "Submitted By"
        }
    },
    "boost_values": {
        "@type": 1.0,
        "term_id": 1.0,
        "term_name": 1.0,
        "synonyms": 1.0
    },
    "changelog": "/profiles/changelogs/assay_term.md"
}
