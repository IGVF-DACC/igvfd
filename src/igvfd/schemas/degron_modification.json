{
    "title": "Degron Modification",
    "$id": "/profiles/degron_modification.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A degron modification that can induce degradation of a protein.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "degron_system",
        "tagged_proteins"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/standard_status"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/product_info"
        },
        {
            "$ref": "mixins.json#/release_timestamp"
        }
    ],
    "dependentSchemas": {
        "$merge": [
            "modification.json#/dependentSchemas",
            "shared_dependencies.json#/standard_status"
        ]
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "degron_system": {
            "title": "Degron System",
            "description": "The type of degron system implemented.",
            "type": "string",
            "enum": [
                "AID",
                "AlissAid",
                "ssAID"
            ],
            "submissionExample": {
                "appscript": "AID",
                "igvf_utils": "AID"
            }
        },
        "tagged_proteins": {
            "title": "Tagged Proteins",
            "description": "The tagged proteins which are targeted for degradation.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "Gene",
                "type": "string",
                "linkTo": "Gene"
            },
            "submissionExample": {
                "appscript": "/genes/ENSG00000237415/ or igvf:gene01",
                "igvf_utils": "/genes/ENSG00000237415/ or igvf:gene01"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "submitted_by.title",
        "summary"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/degron_modification.md"
}
