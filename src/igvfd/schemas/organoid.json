{
    "title": "Organoid",
    "$id": "/profiles/organoid.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Schema for submitting an organoid sample.",
    "type": "object",
    "required": [
        "award",
        "lab",
        "source"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "alternate_accessions",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "sample.json#/properties"
        },
        {
            "$ref": "biosample.json#/properties"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/alternate_accessions"
        },
        {
            "$ref": "mixins.json#/accessioned_status"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/submitter_comment"
        },
        {
            "$ref": "mixins.json#/notes"
        },
        {
            "$ref": "mixins.json#/documents"
        },
        {
            "$ref": "mixins.json#/product_info"
        },
        {
            "$ref": "mixins.json#/url"
        }
    ],
    "dependentSchemas": {
        "lot_id": {
            "required": [
                "product_id"
            ],
            "comment": "Sample with lot_id must include product_id."
        },
        "age_units": {
            "comment": "Human biosamples cannot have age units of minutes or hours. Yeast biosamples cannot have age units of years or months.",
            "allOf": [
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "enum": [
                                    "Homo sapiens"
                                ]
                            },
                            "age_units": {
                                "enum": [
                                    "minute",
                                    "hour"
                                ]
                            }
                        }
                    }
                },
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "enum": [
                                    "Saccharomyces"
                                ]
                            },
                            "age_units": {
                                "enum": [
                                    "year",
                                    "month"
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "life_stage": {
            "comment": "Human and mouse biosamples cannot have yeast life stages and vice versa.",
            "allOf": [
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "oneOf": [
                                    {
                                        "enum": [
                                            "Homo sapiens",
                                            "Mus musculus"
                                        ]
                                    }
                                ]
                            },
                            "life_stage": {
                                "enum": [
                                    "lag",
                                    "fermentative",
                                    "respirative",
                                    "stationary",
                                    "decline"
                                ]
                            }
                        }
                    }
                },
                {
                    "not": {
                        "properties": {
                            "organism": {
                                "enum": [
                                    "Saccharomyces"
                                ]
                            },
                            "life_stage": {
                                "enum": [
                                    "adult",
                                    "child",
                                    "postnatal",
                                    "embryonic"
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "post_differentiation_time": {
            "required": [
                "post_differentiation_time_units"
            ],
            "comment": "Biosample with a specified post_differentiation_time requires post_differentiation_time_units specification."
        },
        "post_differentiation_time_units": {
            "required": [
                "post_differentiation_time"
            ],
            "comment": "Biosample with a specified post_differentiation_time_units requires post_differentiation_time specification."
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "post_differentiation_time": {
            "title": "Post-differentiation time",
            "description": "The time that elapsed past the point when biosamples were differentiated.",
            "comment": "Use in conjunction with post_differentiation_time_units to specify time elapsed post-differentiation. Use of this property requires post_differentiation_time_units specification.",
            "type": "integer"
        },
        "post_differentiation_time_units": {
            "title": "Post-differentiation time units",
            "description": "The units of time that elapsed past the point when biosamples were differentiated.",
            "comment": "Use in conjunction with post_differentiation_time to specify time elapsed post-differentiation. Use of this property requires post_differentiation_time specification.",
            "type": "string",
            "enum": [
                "minute",
                "hour",
                "day",
                "week",
                "month",
                "stage"
            ]
        },
        "date_obtained": {
            "title": "Date collected"
        },
        "treatment": {
            "title": "Differentiation treatment",
            "type": "string"
        }
    },
    "facets": {
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/organoid.md"
}
